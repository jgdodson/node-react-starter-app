{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "es2017",
    "outDir": "build",
    "isolatedModules": false,
    "composite": false,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false
  },
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*"],
  "references": []
}
